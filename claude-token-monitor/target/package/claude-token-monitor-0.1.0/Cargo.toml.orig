[package]
name = "claude-token-monitor"
version = "0.1.0"
edition = "2021"
description = "Lightweight Rust client for Claude token usage monitoring"
authors = ["Hive Mind Swarm <hive@collective.ai>"]
license = "MIT"
repository = "https://github.com/teamktown/claude-token-monitor"
keywords = ["claude", "token", "monitoring", "cli", "ai"]
categories = ["command-line-utilities", "development-tools"]

[dependencies]
clap = { version = "4.0", features = ["derive"] }
serde = { version = "1.0", features = ["derive"] }
serde_json = "1.0"
tokio = { version = "1.0", features = ["full"] }
reqwest = { version = "0.11", features = ["json"] }
chrono = { version = "0.4", features = ["serde"] }
crossterm = "0.27"
colored = "2.0"
ratatui = "0.28"
dirs = "5.0"
anyhow = "1.0"
log = "0.4"
env_logger = "0.10"
uuid = { version = "1.0", features = ["v4"] }
async-trait = "0.1"
rand = "0.8"

[dev-dependencies]
tokio-test = "0.4"
tempfile = "3.0"
mockall = "0.11"